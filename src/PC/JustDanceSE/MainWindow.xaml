            <Border x:Name="imagex_1" HorizontalAlignment="Center" Height="198" Margin="0,125,0,0" VerticalAlignment="Top" Width="160" CornerRadius="10" BorderBrush="White" BorderThickness="4" Opacity="0.9" >
